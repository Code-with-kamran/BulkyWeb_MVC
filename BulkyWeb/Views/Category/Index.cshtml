@using Bulky.Models
@model List<Category>

<div class="row pt-4">
    <h1 class="col-6">
        Category List
    </h1>
    <div class="col-6 text-end">
      
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded-3">
                <i class="bi bi-plus-circle"></i> Add Category
            </a>
           
      
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>

       
        <th>Category ID</th>
        <th>Category Name</th>
            <th>DisplayOrder</th>
        <th>Actions</th>
   
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td >
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary rounded"> <i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger rounded"> <i class="bi bi-trash"></i></a>
                </td>

            </tr>
        }

    </tbody>
</table>