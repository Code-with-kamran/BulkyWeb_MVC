@page
@model BulkyWebRazor.Pages.Categories.IndexModel
<div class="row pt-4">
    <h1 class="col-6">
        Category List
    </h1>
    <div class="col-6 text-end">
      
            <a asp-page="/Categories/create" class="btn btn-primary rounded-3">
                <i class="bi bi-plus-circle"></i> Add Category
            </a>
           
      
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.CategoryList.OrderBy(u => u.Id))
        {
            <tr>
               
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td >
                    <a asp-page="/categories/edit" asp-route-id="@item.Id" class="btn btn-primary rounded"> Edit</a>
                    <a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-danger rounded">  Delete</a>
                </td>

            </tr>
        }

    </tbody>
</table>